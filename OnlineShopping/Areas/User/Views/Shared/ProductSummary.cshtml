@model Product
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.ProductName
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.ProductPrice.ToString("c")</small>
            </span>
            
        </h4>
    </div>
    <form class="row" id="@Model.ProductId" asp-action="AddToCart"
          asp-controller="Cart" method="post">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-4 col-5">

                Description: @Model.ProductDescription
                <br />
           
                Brand: @Model.ProductBrand
                <br />
           
                Stock: @Model.ProductStock
            <div>
                <button type="submit"
                        class="btn btn-success btn-sm pull-right" style="float:right">
                    Add To Cart
                </button>
            </div>

        </span>
        <div class="col-4">
            <img src="~/images/@Model.ProductPhoto"
                 class="rounded-circle"
                 height="150px" width="150px"
                 asp-append-version="true" />
        </div>
    </form>
</div>