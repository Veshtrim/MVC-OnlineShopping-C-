@model ProductsListViewModel
@foreach (var p in Model.Products)
{
@Html.Partial("ProductSummary", p)}

<form>
    <div class="row">
        <div class="col-md-2">
            <input type="text" class="form-control" id="productSearch" asp-for="productSearch" placeholder="Name">
        </div>
        <div class="col-md-2">
            <select class="form-control" name="category" asp-for="ProductCategory">
                <option selected disabled>Select Category</option>
                <option>Phone</option>
                <option>Computer</option>
                <option>Laptop</option>
                <option>Console</option>
                <option>TV</option>
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary mb-2">Filter</button>
        </div>
</form>

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" page-url-category="@Model.CurrentCategory"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>